// coc-settings.json
{
  "explorer.keyMappings.global": {
    "i": false, // cancel default mapkey

    "*": "toggleSelection",
    "<tab>": "actionMenu",

    "gk": "expandablePrev",
    "gj": "expandableNext",
    "h": "collapse",
    "l": ["expandable?", "expand", "open"],
    "J": ["toggleSelection", "normal:j"],
    "K": ["toggleSelection", "normal:k"],
    "gl": "expand:recursive",
    "gh": "collapse:recursive",
    "<2-LeftMouse>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "o": ["expanded?", "collapse", "expand"],
    "<cr>": ["expandable?", "cd", "open"],
    "e": "open",
    "s": "open:split",
    "E": "open:vsplit",
    "t": "open:tab",
    "u": "gotoParent",
    "gs": "reveal:select",
    "gp": "preview:labeling",

    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    "X": "systemExecute",
    "gd": "listDrive",

    "f": "search",
    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": "sourcePrev",
    "]]": "sourceNext",

    "[i": "indentPrev",
    "]i": "indentNext",

    "[m": "indexPrev:modified",
    "]m": "indexNext:modified",

    "[d": "indexPrev:diagnosticError:diagnosticWarning",
    "]d": "indexNext:diagnosticError:diagnosticWarning",
    "[D": "indexPrev:diagnosticError",
    "]D": "indexNext:diagnosticError",

    "[c": "indexPrev:git",
    "]c": "indexNext:git",
    "<<": "gitStage",
    ">>": "gitUnstage"
  }
}
